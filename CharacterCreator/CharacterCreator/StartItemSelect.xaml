<Window x:Class="CharacterCreator.StartItemSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterCreator"
        mc:Ignorable="d"
        Title="WeaponSelect" Height="200" Width="600">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <ComboBox x:Name="cbItemSelect1"
              Grid.Column="0"
              Grid.Row="0"
              Margin="10"
              Visibility="Hidden"/>
    <ComboBox x:Name="cbItemSelect2"
              Grid.Column="1"
              Grid.Row="0"
              Margin="10"
              Visibility="Hidden"/>
    <ComboBox x:Name="cbItemSelect3"
              Grid.Column="0"
              Grid.Row="1"
              Margin="10"
              Visibility="Hidden"/>
    <ComboBox x:Name="cbItemSelect4"
              Grid.Column="1"
              Grid.Row="1"
              Margin="10"
              Visibility="Hidden"/>
  </Grid>
</Window>
