<Window x:Class="CharacterCreator.CharacterSheet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterCreator"
        mc:Ignorable="d"
        Title="CharacterSheet" Height="450" Width="800">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Label x:Name="lblSavingStr"
           Grid.Row="0"/>
    <Label x:Name="lblSavingDex"
           Grid.Row="1"/>
    <Label x:Name="lblSavingCon"
           Grid.Row="2"/>
    <Label x:Name="lblSavingInt"
           Grid.Row="3"/>
    <Label x:Name="lblSavingWis"
           Grid.Row="4"/>
    <Label x:Name="lblSavingCha"
           Grid.Row="5"/>
  </Grid>
</Window>
