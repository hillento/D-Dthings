<Window x:Class="CharacterCreator.CharacterSheet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterCreator"
        mc:Ignorable="d"
        Title="CharacterSheet" Height="29.7cm" Width="21cm">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <GroupBox Header ="Saving Throws">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="chkbxSavingStr"
                Grid.Column="0"
                Grid.Row="0"
                IsHitTestVisible="False"/>
        <CheckBox x:Name="chkbxSavingDex"
                Grid.Column="0"
                Grid.Row="1"
                IsHitTestVisible="False"/>
        <CheckBox x:Name="chkbxSavingCon"
                Grid.Column="0"
                Grid.Row="2"
                IsHitTestVisible="False"/>
        <CheckBox x:Name="chkbxSavingInt"
                Grid.Column="0"
                Grid.Row="3"
                IsHitTestVisible="False"/>
        <CheckBox x:Name="chkbxSavingWis"
                Grid.Column="0"
                Grid.Row="4"
                IsHitTestVisible="False"/>
        <CheckBox x:Name="chkbxSavingCha"
                Grid.Column="0"
                Grid.Row="5"
                IsHitTestVisible="False"/>
        <TextBox x:Name="txtbxSavingStr"
                 Grid.Column="1"
                 Grid.Row="0"
                 IsHitTestVisible="False"/>
        <TextBox x:Name="txtbxSavingDex"
                 Grid.Column="1"
                 Grid.Row="1"
                 IsHitTestVisible="False"/>
        <TextBox x:Name="txtbxSavingCon"
                 Grid.Column="1"
                 Grid.Row="2"
                 IsHitTestVisible="False"/>
        <TextBox x:Name="txtbxSavingInt"
                 Grid.Column="1"
                 Grid.Row="3"
                 IsHitTestVisible="False"/>
        <TextBox x:Name="txtbxSavingWis"
                 Grid.Column="1"
                 Grid.Row="4"
                 IsHitTestVisible="False"/>
        <TextBox x:Name="txtbxSavingCha"
                 Grid.Column="1"
                 Grid.Row="5"
                 IsHitTestVisible="False"/>
      </Grid>
    </GroupBox>
    
  </Grid>
</Window>
