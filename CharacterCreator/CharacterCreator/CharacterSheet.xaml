<Window x:Class="CharacterCreator.CharacterSheet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterCreator"
        mc:Ignorable="d"
        Title="CharacterSheet" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <CheckBox x:Name="ckbxSavingStr"
              Grid.Row="0"
              IsHitTestVisible="False"
              IsChecked="False"/>
    <CheckBox x:Name="ckbxSavingDex"
              Grid.Row="1"     
              IsHitTestVisible="False"
              IsChecked="False"/>
    <CheckBox x:Name="ckbxSavingCon"
              Grid.Row="2"
              IsHitTestVisible="False"
              IsChecked="False"/>
    <CheckBox x:Name="ckbxSavingInt"
              Grid.Row="3"
              IsHitTestVisible="False"
              IsChecked="False"/>
    <CheckBox x:Name="ckbxSavingWis"
              Grid.Row="4"
              IsHitTestVisible="False"
              IsChecked="False"/>
    <CheckBox x:Name="ckbxSavingCha"
              Grid.Row="5"
              IsHitTestVisible="False"
              IsChecked="False"/>
  </Grid>
</Window>
